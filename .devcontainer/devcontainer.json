// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "EmpleosInclusivos",
	"image": "mcr.microsoft.com/devcontainers/base:noble",

	// Docker-in-Docker for running OxideExpo services
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"moby": true,
			"dockerDashComposeVersion": "v2"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20"
		}
	},

	// Persist Docker volumes across dev container rebuilds
	"mounts": [
		"source=empleos-docker-volumes,target=/var/lib/docker/volumes,type=volume"
	],

	// Forward ports for OxideExpo services
	"forwardPorts": [
		3000,  // Frontend (Next.js)
		8080,  // Backend (Rust)
		5432   // PostgreSQL
	],

	// Start OxideExpo services and setup Playwright for e2e tests
	"postCreateCommand": "cd OxideExpo && docker compose -f docker-compose.dev.yml up -d && cd frontend && npm install && npx playwright install --with-deps chromium",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-playwright.playwright",
				"anthropic.claude-code",
				"rust-lang.rust-analyzer",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"bradlc.vscode-tailwindcss"
			]
		}
	},

	"remoteUser": "vscode"
}
